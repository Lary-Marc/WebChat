doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css' integrity='sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=' crossorigin='anonymous')
        link(rel='stylesheet' href='css/style.css')
        title WebCage Chat App
    body
        .join-container
            header.join-header
                h1
                i.fas.fa-kiwi-bird
                |  ChatApp
            main.join-main
                form(action='/chat')
                    .form-control
                        label(for='username') Username
                        input#username(type='text' name='username' placeholder='Enter username...' required='')
                    //- .form-control
                    //-     label(for='username') Username
                    //-     input#username(type='text' name='username' placeholder='Enter username...' required='')
                    .form-control
                        label(for='room') Chat Channel
                        select#room(name='room'  required="")
                            option(selected disabled value="") Room
                            option Business 
                            option Technology
                            option Sports
                            option International News
                            option Just Cats
                    .flex
                        button.btn(type='submit') Login to Chat
